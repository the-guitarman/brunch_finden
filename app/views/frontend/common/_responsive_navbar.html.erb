<% cache('frontend-common-responsive_navbar') do -%>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%#= link_to('', root_url, {:class => 'navbar-brand hidden-xs bg-image'}) -%>
        <%= link_to('', root_url, {:class => 'navbar-brand visible-xs bg-image'}) -%>
        <form action="<%= search_url -%>" class="navbar-form navbar-left" role="search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="<%= t('shared.search.field_default_value') -%>" name="search">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to t('.new_location_suggestion'), new_location_suggestion_url -%></li>
          <li><%= link_to t('.new_location'), new_location_url -%></li>
          <li><%= link_to t('.about_us'), about_us_url -%></li>
          <li><%= link_to(t('.registration_information'), registration_information_url) -%></li>
          <li><%= link_to(t('.general_terms_and_conditions'), general_terms_and_conditions_url) -%></li>
          <li><%= link_to(t('.privacy_notice'), privacy_notice_url) -%></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
<% end -%>